<% extend('../layouts/dashboard_layout') %>
    
<div class="container">
        <!-- <input type="search" name="" id="" class="mb-3 form-control" style="width:20%" placeholder="Search..."> -->
        <table class="table border border-secondary">
            <thead class="thead-dark">
                <tr>

                    <th scope="col"> 時間 </th>
                    <th scope="col"> 書 </th>
                    <th scope="col"> 價錢 </th>

                </tr>
            </thead>
            <tbody>
                <% for(var prop in sold_response_list) { %>
                <tr>
                    <td><%- moment(sold_response_list[prop].sold_time * 1000 ).format('YYYY / MM / DD')  %></td>
                    <td> <%- sold_response_list[prop].book %> </td>
                    <td class="text-success"> <b><%- sold_response_list[prop].price %></b> </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    
    <!-- Pagination -->
    <nav class="mt-5" aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item <% if(!page.hasPre){ %> disabled <% } %>">
                    <a class="page-link" href="/dashboard/sold?page=<%- page.currentPage - 1 %>" tabindex="-1">Previous</a>
                </li>
    
                <% for(var i = 1; i < page.totalPages + 1; i++) { %>
                <li class="page-item  <% if(i == page.currentPage){ %> active <% } %> ">
                    <a class="page-link" href="/dashboard/sold?page=<%- i %>">
                        <%- i %>
                    </a>
                </li>
                <% } %>
    
                <li class="page-item <% if(!page.hasNext){ %>disabled<% } %>">
                    <a class="page-link" href="/dashboard/sold?page=<%- page.currentPage + 1 %>">Next</a>
                </li>
            </ul>
        </nav>
</div>

